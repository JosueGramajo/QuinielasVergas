<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="  HEADER"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:background="@color/lightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_finals_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_finals_team1"
            android:layout_width="106dp"
            android:layout_height="46dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/undefined"/>

        <EditText
            android:id="@+id/et_finals_score1"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_finals_score2"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="number"/>

        <ImageView
            android:id="@+id/iv_finals_team2"
            android:layout_width="106dp"
            android:layout_height="46dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/undefined"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cb_finals_penalties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Penales"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:id="@+id/v_penalties_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganador en penales:"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/rb_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team1"/>

                <RadioButton
                    android:id="@+id/rb_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team2"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>