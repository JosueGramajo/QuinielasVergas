<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_review_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Final"
            android:gravity="center"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Quiniela"
            android:gravity="center"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Puntos"
            android:gravity="center"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">
            <ImageView
                android:id="@+id/iv_review_firstTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rusia"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:layout_weight="0.5"/>

            <ImageView
                android:id="@+id/iv_review_secondTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arabia"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp">
            <TextView
                android:id="@+id/tv_review_first_final_score"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="1"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tv_review_second_final_score"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp">

            <TextView
                android:id="@+id/tv_review_first_pool_score"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="1"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tv_review_second_pool_score"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"
                android:textSize="17sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_points"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:text="5"
            android:gravity="center"

            />

    </LinearLayout>



</LinearLayout>